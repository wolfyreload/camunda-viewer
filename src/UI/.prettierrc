{
  "semi": true,
  "printWidth": 120,
  "useTabs": false,
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.js"
      ],
      "options": {
        "tabWidth": 2,
        "bracketSpacing": true,
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "always"
      }
    },
    {
      "files": [
        "*.css",
        "*.scss",
        "*.html"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
